<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="darrylsalive.postsecondarypassport.SMARTGoalsActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/smartGoalsListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@+id/addSubgoalButton"
        android:layout_alignTop="@+id/addSubgoalButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Subgoal"
        android:id="@+id/addSubgoalButton"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"

        android:layout_alignParentStart="true" />
</LinearLayout>
